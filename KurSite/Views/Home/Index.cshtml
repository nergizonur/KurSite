@model List<KurSite.Models.Kur>
@{

}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" href="~/css/bootstrap.min.css" />
    <title>Index</title>
</head>
<body>

    <div class="navbar navbar-dark bg-dark py-4 px-5 d-flex justify-content-between">
        <a href="#" class="navbar-brand">KUR SİTESİ</a>
        <div>
            <form method="post" action="/Home/Index">
                <div class="row">
                    <div class="col-9">
                        <input type="text" class="form-control" placeholder="Kur Kodu" name="code">
                    </div>
                    <div class="col-3">
                        <input type="submit" class="btn btn-primary" value="Ara">
                    </div>
                </div>
            </form>

        </div>
    </div>
    <div class="p-5">
        <div class="row">
            <div class="col-4">
                <form method="post" action="/Home/SelectDate">
                    <div class="row">
                        <div class="col-9">
                            <input type="date" name="date" class="form-control" />
                        </div>
                        <div class="col-3">
                            <input type="submit" value="Listele" class="btn btn-outline-primary" />
                        </div>
                    </div>
                </form>
            </div>
            <div class="col-4">
                <div class="row">
                    <div class="col">
                        <div class="d-flex justify-content-end">
                            <input type="color" id="color" class="form-control-color" />
                        </div>
                    </div>
                    <div class="col">

                        <input type="button" id="colorChangeButton" value="Yazı Rengi Değiştir" class="btn btn-outline-success" />
                    </div>
                </div>
            </div>
            <div class="col-4">
                <div class="row">
                    <div class="col">
                        <div class="d-flex justify-content-end">
                            <input type="number" id="fontSize" class="form-control" value="12" min="12" max="30"/>
                        </div>
                    </div>
                    <div class="col">

                        <input type="button" id="fontSizeChangeButton" value="Font Büyüklüğü Değiştir." class="btn btn-outline-info" />
                    </div>
                </div>
            </div>

        </div>
       
    </div>
    <div class="py-2 px-5 table-responsive-sm">
        <table class="table table-hover table-striped">
            <thead>
                <tr class="table-dark">
                    <th>
                        Döviz Kodu
                    </th>
                    <th>
                        Adı
                    </th>
                    <th>
                        Alış Fiyatı
                    </th>
                    <th>
                        Satış Fiyatı
                    </th>

                </tr>
            </thead>
            <tbody>
                @foreach (var forex in Model)
                {
                    <tr>
                        <td class="fw-bold">
                            @forex.ForexCode/TRY
                        </td>
                        <td>
                            @forex.ForexName
                        </td>
                        <td>
                            @forex.ForexBuying

                        </td>
                        <td>
                            @forex.ForexSelling
                        </td>
                    </tr>
                }


            </tbody>
        </table>
    </div>
    <script src="~/scripts/jquery-3.7.1.min.js"></script>
    <script src="~/scripts/app.js"></script>

    <script src="~/js/bootstrap.min.js"></script>
</body>
</html>